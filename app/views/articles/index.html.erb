<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @articles.each do |article| %>
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%= article.title %></h2>
        <h6><%= article.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div>
        <%= raw(article.content).truncate(200) %>
      </div>

      <div class="text-center">
        <%= link_to "READ MORE", article_path(article) %>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>